@model IEnumerable<Joyeria.Models.JewelleryType>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading-font">View All Jewellery Type</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Jewellery Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JewelleryTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JewelleryTypeName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.JewelleryTypeID">Edit</a> |
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.JewelleryTypeID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.JewelleryTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
