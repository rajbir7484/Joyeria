@model Joyeria.Models.JewelleryReview

@{
    ViewData["Title"] = "AddReview";
}

<h1 class="text-center heading-font">Add Review To @ViewData["JewelleryTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <textarea asp-for="ReviewText" class="form-control"></textarea>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
                <input type="hidden" asp-for="JewelleryID" value='@ViewData["JewelleryID"]' />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Jewellery Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
