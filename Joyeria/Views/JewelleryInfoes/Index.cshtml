@model IEnumerable<Joyeria.Models.JewelleryInfo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading-font" > View All Jewellery</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Jewellery</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JewelleryType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/photos/@item.JewelleryID@item.Extension" alt="" style="width:50%">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenderType.GenderTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JewelleryType.JewelleryTypeName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.JewelleryID">Edit</a> |
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.JewelleryID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.JewelleryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
